<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appspot.diris" version="0-1-7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <feature name="SecureStorage">
        <param name="browser-package" value="SecureStorage" />
    </feature>
    <name>Diris</name>
    <description>
		Diris image guessing game
	</description>
    <author email="markus.r.shepherd@gmail.com" href="https://diris-app.appspot.com">
		Markus Shepherd
	</author>
    <content src="index.html" />
    <access origin="*" />
    <hook src="scripts/copy_resource_files.js" type="before_build" />
    <hook src="scripts/copy_files.js" type="after_build" />
    <hook src="scripts/rename_files.js" type="after_build" />
    <preference name="BackgroundColor" value="0xfff0f0f0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
</widget>
